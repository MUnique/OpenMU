@page "/accounts"
@using MUnique.OpenMU.Web.AdminPanel.Services
@using MUnique.OpenMU.DataModel.Entities;
@using MUnique.OpenMU.Persistence;

@inject AccountService _accountService;

<PageTitle>OpenMU: Cuentas</PageTitle>
<Breadcrumb IsFirstFromRoot="true" Caption="Cuentas" />
<h1>Cuentas</h1>

<div>
    <DataTable TItem=@Account>
        <TableHeader>
            <th class="col-1">Usuario</th>
            <th class="col-1">Estado</th>
            <th class="col-2">E-Mail</th>
            <th class="col-2">Acción</th>
        </TableHeader>
        <ItemTemplate Context="item">
            <td>@item.LoginName</td>
            <td>@item.State</td>
            <td>@item.EMail</td>
            <td>
                <NavLink href="@($"edit-account/{item.GetId()}/{typeof(Account).FullName}/{item.GetId()}")">Editar</NavLink>
            </td>
        </ItemTemplate>
        <TableFooter>
            <td><button type="button" class="btn btn-sm btn-success" @onclick="@this._accountService.CreateNewInModalDialogAsync">Crear</button></td>
            <td></td>
            <td></td>
            <td></td>
        </TableFooter>
    </DataTable>
</div>
